<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:id="@+id/layout_item"
    android:backgroundTint="@color/dark_blue_top"
    android:background="@color/dark_blue_top">

    <ImageView
        android:id="@+id/iv_icon_player"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="30dp"
        android:layout_width="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/kraken1">

    </ImageView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_icon_player"
        android:layout_marginStart="4dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/iv_icon_player"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginStart="4dp">

        <TextView
            android:id="@+id/health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8HP"
            android:paddingEnd="5dp"
            android:textColor="@color/white">
        </TextView>
        <TextView
            android:id="@+id/win_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2WP"
            android:paddingEnd="5dp"
            android:textColor="@color/white">
        </TextView>
        <TextView
            android:id="@+id/energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Energy"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>